{
    "manifest_version": 3,
    "name": "Job Application Assistant",
    "version": "1.0",
    "description": "AI-powered assistant that helps fill job applications with your profile data.",
    "permissions": [
      "storage",
      "activeTab",
      "scripting",
      "tabs"
    ],
    "host_permissions": [
      "*://*.linkedin.com/*",
      "*://*.indeed.com/*",
      "*://*.glassdoor.com/*",
      "*://cdnjs.cloudflare.com/*",
      "*://unpkg.com/*",
      "<all_urls>"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "content_scripts": [
      {
        "matches": [
          "*://*.linkedin.com/*",
          "*://*.indeed.com/*",
          "*://*.glassdoor.com/*",
          "<all_urls>"
        ],
        "js": [
          "content.js"
        ],
        "css": [
          "styles.css"
        ],
        "run_at": "document_end"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "pdf.min.js",
          "pdf.worker.min.js"
        ],
        "matches": ["<all_urls>"]
      }
    ]
  }